{
	"name": "@wethegit/react-modal",
	"version": "4.0.0",
	"description": "A customizable, accessible modal window component for React projects.",
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"style": "./dist/style.css",
	"css": "./dist/style.css",
	"main": "./dist/react-modal.js",
	"types": "./dist/main.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/main.d.ts",
				"default": "./dist/react-modal.js"
			},
			"require": "./dist/react-modal.cjs"
		},
		"./style.css": "./dist/style.css"
	},
	"scripts": {
		"start": "vite",
		"build": "rm -rf dist && vite build",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "npm run build && changeset publish",
		"lint": "biome check . && stylelint '**/*.{css,scss}'",
		"format": "biome format . --write && prettier --write '**/*.{css,scss}'",
		"prepare": "husky"
	},
	"publishConfig": {
		"access": "public"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": "biome check --write --no-errors-on-unmatched",
		"*.{css,scss}": "stylelint --fix && prettier --write",
		"*": "biome format --write"
	},
	"keywords": [
		"react",
		"modal",
		"dialog",
		"dialogue",
		"window",
		"lightbox",
		"accessible"
	],
	"homepage": "https://github.com/wethegit/react-modal",
	"repository": {
		"type": "git",
		"url": "https://github.com/wethegit/react-modal"
	},
	"bugs": {
		"url": "https://github.com/wethegit/react-modal/issues"
	},
	"author": "Andrew Rubin <andrew@wethecollective.com> (https://wethecollective.com)",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "~25.0.9",
		"@types/react": "~19.2.8",
		"@types/react-dom": "~19.2.3",
		"@vitejs/plugin-react-swc": "^3.7.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"postcss": "^8.5.6",
		"postcss-scss": "^4.0.9",
		"prettier": "~3.8.0",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"sass": "^1.83.4",
		"stylelint": "^17.0.0",
		"stylelint-config-recommended": "^18.0.0",
		"stylelint-config-standard": "^40.0.0",
		"stylelint-config-standard-scss": "^17.0.0",
		"stylelint-order": "^7.0.1",
		"typescript": "~5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "~4.5.4"
	},
	"peerDependencies": {
		"react": "18 - 19",
		"react-dom": "18 - 19"
	},
	"dependencies": {
		"@changesets/changelog-github": "~0.5.0",
		"@changesets/cli": "~2.27.1"
	}
}
