{
  "name": "@wethegit/react-modal",
  "version": "1.0.0",
  "description": "A customizable, accessible modal window component for React projects.",
  "files": [
    "dist"
  ],
  "style": "dist/style.css",
  "css": "dist/style.css",
  "type": "module",
  "main": "./dist/react-modal.umd.cjs",
  "module": "./dist/react-modal.js",
  "exports": {
    ".": {
      "import": "./dist/react-modal.js",
      "require": "./dist/react-modal.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "npm run lint:scripts && npm run lint:styles && vite build",
    "lint:scripts": "eslint --fix --ext .jsx,js --ignore-path .gitignore .",
    "lint:styles": "stylelint src/**/*.{css,scss}"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*": "prettier -w -u"
  },
  "keywords": [
    "react",
    "modal",
    "dialog",
    "dialogue",
    "window",
    "lightbox",
    "accessible"
  ],
  "homepage": "https://github.com/wethegit/react-modal",
  "repository": {
    "type": "git",
    "url": "https://github.com/wethegit/react-modal"
  },
  "bugs": {
    "url": "https://github.com/wethegit/react-modal/issues"
  },
  "author": "Andrew Rubin <andrew@wethecollective.com> (https://wethecollective.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.38.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "vite": "^4.3.2"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@wethegit/react-hooks": "^1.0.0",
    "prop-types": "~15.8.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2"
  }
}
